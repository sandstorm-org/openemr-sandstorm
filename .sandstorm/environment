PATCHES_DIR=${APP_DIR}/patches

# Apache HTTP Server
APACHE_SITES_DIR=/etc/apache2/sites-available

# MariaDB
MARIADB_CONF_D_DIR=/etc/mysql/mariadb.conf.d
MARIADB_DATA_DIR=/var/lib/mysql
#MARIADB_DATAFILES_DIR=/var/lib/mysql-files

# Open-EMR
OPENEMR_VERSION=7.0.3
